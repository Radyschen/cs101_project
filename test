def start_game():
    
    l=900  # spielfeldgröße
    view = SVGView(l,l)
    pl = Player(l//2, l//2, 30, view)
    running = True

        
    while running == True:
        
        key = view.last_key()
        print("-------------")
        print(key)
        print(".")
        print(view.pressed_key())

        dx, dy = 0, 0
        if view.pressed_key() == "ArrowDown":
            dx, dy = 0, 1
        elif key == "ArrowUp":
            dx, dy = 0, -1
        elif key == "ArrowLeft":
            dx, dy = -1, 0
        elif key == "ArrowRight":
            dx, dy = 1, 0
        elif key == "q":
            game_end()
            running = False
        pl.set_dx(dx * pl.get_speed())
        pl.set_dy(dy * pl.get_speed())

        pl.bewegen()
        
        view.sync()



